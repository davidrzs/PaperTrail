# PaperTrail Environment Configuration
# Copy this file to .env and update the values

# Security - REQUIRED in production
SECRET_KEY=your-secret-key-here-change-in-production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"

# Database - PostgreSQL with pgvector extension
DATABASE_URL=postgresql://papertrail:papertrail_dev_password@localhost:5432/papertrail

# Development Mode (set to true for local development)
DEBUG=false

# Optional: Twitter/X Integration
# TWITTER_API_KEY=
# TWITTER_API_SECRET=
# TWITTER_ACCESS_TOKEN=
# TWITTER_ACCESS_TOKEN_SECRET=
